# Telegram Bot Token - Get this from BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# LLM Provider Configuration
# Set which LLM provider to use: 'openai' or 'anthropic'
LITELLM_PROVIDER=anthropic

# OpenAI API Key - Required if using OpenAI models
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.7

# Anthropic API Key - Required if using Claude models
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=4000

# SerpAPI Key - Required for web search functionality
SERPAPI_API_KEY=your_serpapi_api_key_here

# Admin Chat ID - Your personal Telegram chat ID for receiving test messages
# To find your chat ID, start a chat with @userinfobot on Telegram
ADMIN_CHAT_ID=your_telegram_chat_id_here

# Google Calendar API - For Calendar Agent
# Note: You can either set these environment variables OR
# place your credentials.json file in the calendar_agent/ directory
GOOGLE_CALENDAR_CLIENT_ID=your_client_id_here
GOOGLE_CALENDAR_PROJECT_ID=your_project_id_here
GOOGLE_CALENDAR_CLIENT_SECRET=your_client_secret_here

# Allowed Telegram User IDs
ALLOWED_TELEGRAM_USER_IDS=123456,789012  # Comma-separated list of allowed user IDs

# Web Search Agent
SERPER_API_KEY=your_serper_api_key_here  # For Google Search API